@using ElsWebApp.Services;
@{
    Layout = "_SimpleLayout";
}

@{
    var loginPage = ConstService.PathInfo.PATH_LOGIN_ADMIN;
    if (ViewData["Role"]!.ToString() == ConstService.SystemCode.SYSCODE_USR_USERS)
    {
        loginPage = ConstService.PathInfo.PATH_LOGIN_STUDENT;
    }
}
<img src="@ConstService.PathInfo.PATH_SYSTEM_LOGO" style="height:60px; object-fit:cover;" />
<div class="d-flex justify-content-center">
    <div class="mt-5">
        <h1>ログアウトしました</h1>
        <h5 class="mt-3">再ログインは<a href="@loginPage">こちら</a>から</h5>
    </div>
</div>
