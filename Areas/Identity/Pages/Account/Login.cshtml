@page
@model LoginModel
@using ElsWebApp.Services;
@{
    Layout = "../../../../Views/Shared/_SimpleLayout";
}

<img src="@ConstService.PathInfo.PATH_SYSTEM_LOGO" style="height:60px; object-fit:cover;" />
<div class="row block-center mt-5">
    <div class="col-sm-8 col-md-4">
        <section>
            <form id="account" method="post" asp-antiforgery="true">
                @{
                    var title = $"ログイン({(Model.Role == ConstService.SystemCode.SYSCODE_USR_USERS? "受講者":"管理者")})";
                }
                <h2>@title</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div>ユーザID</div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" value="@Model.Input.Email"/>
                    <label asp-for="Input.Email" class="form-label">Eメールアドレス</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div>パスワード</div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" value="@Model.Input.Password" />
                    <label asp-for="Input.Password" class="form-label">大文字含む半角英数記号10文字以上</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Role" type="hidden" />
                <!--
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                @*Html.DisplayNameFor(m => m.Input.RememberMe)*@
                    </label>
                </div>
                -->
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="mt-3">
                    <p>
                        ※パスワードの変更は、<a asp-page="./ResetPassword" asp-route-role="@Model.Role">こちら</a>
                    </p>
                    <p>
                        ※アカウント新規登録は、<a asp-page="./Register" asp-route-role="@Model.Role" asp-route-returnUrl="@Model.ReturnUrl">こちら</a>
                    </p>
                    <!--
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        -->
                    </div>
            </form>
        </section>
