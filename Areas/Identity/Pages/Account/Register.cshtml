@page
@model RegisterModel
@using ElsWebApp.Services;
@{
    ViewData["Title"] = "Register";
}

<img src="@ConstService.PathInfo.PATH_SYSTEM_LOGO" style="height:60px; object-fit:cover;" />
<div class="row block-center">
    <div class="col-12 col-sm-6 col-xl-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" asp-antiforgery="true">
            <h3>アカウント登録</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div>ユーザID</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">メールアドレス</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>氏名</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="姓 名" />
                <label asp-for="Input.UserName">(例)鈴木 一郎</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div>パスワード</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">大文字含む半角英数記号10文字以上</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>パスワード(確認用)</div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">大文字含む半角英数記号10文字以上</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <input asp-for="Input.Role" type="hidden"/>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">登録</button>
        </form>
    </div>
